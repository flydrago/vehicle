/模态框
.modal.fade.bs-example-modal-lg#consumer_info_select_table_modal{'tabindex'=>-1,'role'=>'dialog','aria-labelledby'=>'myModalLabel'}
  .modal-dialog.modal-lg{'role'=>'document'}
    .modal-content
      %table#consumer_info_select_table.table.table-striped.table-bordered.table-hover{'data-source'=>"/consumer_infos/select.json"}
        %thead
          %tr
            %th 姓名
            %th 手机号码
            %th 身份证号
            %th 出生日期
    .modal-footer
      %button.btn.btn-primary#consumer_info_select_table_callback 确定
      %button.btn.btn-default{'data-dismiss'=>'modal'} 关闭