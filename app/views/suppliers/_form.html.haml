
= form_for @supplier , remote:true do |f|
  #error_explanation{"style"=>"display:none"}
    %ul

  %table{class: "table table-bordered table-hover"}
    %tr{class:'attr-category'}
      %td
        %label{class:'attr-category'}
          基本信息
      %td{colspan:5}
    %tr
      %td
        = f.label :供应商单位名称
      %td
        = f.text_field :name,:class=>'form-control'
    %tr
      %td
        = f.label :联系人姓名
      %td
        = f.text_field :contact_name,:class=>'form-control'
    %tr
      %td
        = f.label :地址
      %td
        = f.text_field :address,:class=>'form-control'
    %tr
      %td
        = f.label :手机号
      %td
        = f.text_field :mobile,:class=>'form-control'
  .actions
    = f.submit '保存',class:'btn btn-info',style:'display:'+(@operation == 'show' ? 'none':'inline' )+''
    &nbsp;&nbsp;&nbsp;
    %a{class:'btn','data-href'=> suppliers_path}
      %i{class:'ace-icon fa fa-return bigger-110'}返回