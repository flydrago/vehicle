%div{class:'page-header'}
  %h1
    供应商信息列表
%hr

.well
  .form-horizontal
    .form-group
      .col-sm-4
        %label.col-sm-4.control-label
          单位名称
        .col-sm-8
          %input.form-control#name{type:'text',placeholder:"单位名称"}
      .col-sm-4
        %label.col-sm-4.control-label
          联系人
        .col-sm-8
          %input.form-control#contact_name{type:'text',placeholder:"联系人姓名"}
    .form-group
      .col-sm-4
        %label.col-sm-4.control-label
          联系人电话
        .col-sm-8
          %input.form-control#mobile{type:'text',placeholder:"联系人电话或手机"}

      .col-sm-4
        %label.col-sm-4.control-label
        .col-sm-8
          %a.btn.btn-primary{href: 'javascript:search();'} 搜索
= link_to '添加新供应商', '', 'data-href' =>new_supplier_path,class:"btn btn-primary"
.dataTables_wrapper.form-inline.no-footer

  %table.table.table-hover{'data-source'=>"/consumer_infos.json",'id' => "#{controller_name}_datatable"}
    %thead
      %tr
        %th 供应商单位名称
        %th 联系人
        %th 联系电话
        %th 地址
        %th 创建时间
        %th 操作
    %tbody




