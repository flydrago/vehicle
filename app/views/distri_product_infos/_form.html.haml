= form_for @distri_product_info do |f|
  - if @distri_product_info.errors.any?
    #error_explanation
      %h2= "#{pluralize(@distri_product_info.errors.count, "error")} prohibited this distri_product_info from being saved:"
      %ul
        - @distri_product_info.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :product_name
    = f.text_field :product_name
  .field
    = f.label :product_price
    = f.text_field :product_price
  .actions
    = f.submit 'Save'
